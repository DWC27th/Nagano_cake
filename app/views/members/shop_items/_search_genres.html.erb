<div class="col-3 mt-4 pr-3">
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody class="table-borderless bg-white">
      <% genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, controller: "members/shop_items", action: "index", genre_id: genre.id %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>