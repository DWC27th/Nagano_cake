<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>購入情報入力</h3>
			<%= form_for(@order, url: members_order_confirm_path, method: :get) do |order| %>
			    <h5>支払方法</h5>
                <label ><%= order.radio_button :payment_method, "クレジットカード" %>クレジットカード</label>
                <label ><%= order.radio_button :payment_method, "銀行振込" %>銀行振込</label>

                <h5>お届け先</h5>
                <p><%= order.radio_button :postal_code, "#{current_member.postal_code}" %><%= order.hidden_field :postal_code, :value => "#{current_member.postal_code}" %><%= order.hidden_field :address, :value => "#{current_member.address}" %><%= order.hidden_field :name, :value => "#{current_member.last_name}#{current_member.first_name}" %>ご自身の住所<br>〒<%= current_member.postal_code %><%= current_member.address %><br><%= current_member.last_name %><%= current_member.first_name %>
                </p>
                <p>
                <%= order.radio_button :postal_code, "#{}" %>新しいお届け先<br>
                    郵便番号　<%= order.text_field :postal_code %><br>
                    住所 <%= order.text_field :address %><br>
                    宛名 <%= order.text_field :name %>
                </p>
                <button type="submit" class="btn btn-primary btn-block">確認画面に進む</button>

			<% end %>
		</div>
    </div>
</div>
