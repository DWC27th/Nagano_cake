<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1>注文履歴一覧</h1>
			<table class="table">
				<tr>
					<th>注文日</th>
					<th>配送先</th>
					<th>注文商品</th>
					<th>支払金額</th>
					<th>ステータス</th>
					<th>注文詳細</th>
				</tr>
				<% @orders.each do |order| %>
					<tr>
						<td><%= order.created_at %></td>
						<td><%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
						<td><%#= order.@order_items %></td>
						<td><%#= @order_item.price %></td>
						<td><%#= @order_item.order_status %></td>
						<td><%= link_to "表示する", members_order_path(order.id) %></td>
					</tr>
				<% end %>
			</table>
		</div>
    </div>
</div>




