<h1>注文履歴詳細</h1>
<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<table class="table">
				<h5>注文情報</h5>
				<tr>
					<th>注文日</th><td><%= @order.created_at %></td>
				</tr>
				<tr>
					<th>配送先</th><td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
				</tr>
				<tr>
					<th>支払方法</th><td><%= @order.payment_method %></td>
				</tr>
				<tr>
					<th>ステータス</th><td><%= @order.order_status %></td>
				</tr>
			</table>
		</div>
		<div class="col-xs-4">
			<table class="table">
				<h5>請求情報</h5>
				<tr>
					<th>商品合計</th><td><%#= @sum %></td>
				</tr>
				<tr>
					<th>配送料</th><td><%#= @shipping_address.shipping_fee %></td>
				</tr>
				<tr>
					<th>ご請求額</th><td><%#= @sum +  @shipping_address.shipping_fee %></td>
				</tr>
			</table>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h5>注文内容</h5>
			<table class="table">
				<tr>
					<th>商品</th>
					<th>単価（税込）</th>
					<th>個数</th>
					<th>小計</th>
				</tr>
				<%# @order_items.each do |order_item| %>
					<tr>
						<td><%#= order_item.shop_item.name %></td>
						<td><%#= order_item.price* 1.1 %></td>
						<td><%#= order_item.quantity %></td>
						<td><%#= order_item.price  *  order_item.quantity %></td>
					</tr>
				<%# end %>
			</table>
		</div>
    </div>
</div>




