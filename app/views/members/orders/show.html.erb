<h1>注文履歴詳細</h1>
<div class="container">
	<div class="row">
		<div class="col-7">
			<table class="table table-bordered">
				<h5>注文情報</h5>
				<tr>
					<th>注文日</th><td><%= @order.created_at %></td>
				</tr>
				<tr>
					<th>配送先</th><td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
				</tr>
				<tr>
					<th>支払方法</th><td><%= @order.payment_method %></td>
				</tr>
				<tr>
					<th>ステータス</th><td><%= @order.order_status %></td>
				</tr>
			</table>
		</div>
		<div class="col-5">
			<table class="table table-bordered">
				<h5>請求情報</h5>
				<% order_item_total_price = 0 %>
				<% @order_item.each do |order_item| %>
	              <% order_item_price_with_tax = (order_item.price * 1.1).floor %>
	              <% order_item_price = order_item_price_with_tax * order_item.quantity %>
	              <% order_item_total_price = order_item_total_price + order_item_price %>
              	<% end %>
				<tr>
					<th>商品合計</th><td><%= order_item_total_price %>円</td>
				</tr>
				<tr>
					<th>配送料</th><td><%= @order.shipping_fee %>円</td>
				</tr>
				<tr>
					<th>ご請求額</th><td><%= order_item_total_price + @order.shipping_fee %>円</td>
				</tr>
			</table>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-6">
			<h5>注文内容</h5>
			<table class="table table-bordered">
				<thead class="thead-light">
					<tr>
	                <th>商品</th>
	                <th>単価（税込）[円]</th>
	                <th>個数</th>
	                <th>小計[円]</th>
	                </tr>
                </thead>
				<tbody>
		            <% @order_item.each do |order_item| %>
			            <% order_item_price_with_tax = (order_item.price * 1.1).floor %>
			            <% order_item_price = order_item_price_with_tax * order_item.quantity %>
		                <tr>
		                	<% shop_item_name = "" %>
						<% @shop_items.each do |shop_item| %>
							<% if shop_item.id == order_item.shop_item_id %>
								<% shop_item_name = "#{shop_item.name}" %>
								<% break %>
							<% else %>
								<% shop_item_name = "No" %>
							<% end %>
						<% end %>
		                <td><%= shop_item_name %></td>
		                  <td><%= order_item_price_with_tax %></td>
		                  <td><%= order_item.quantity %></td>
		                  <td><%= order_item_price %></td>
		                </tr>
		            <% end %>
		        </tbody>
			</table>
		</div>
    </div>
</div>




