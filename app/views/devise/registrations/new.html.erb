<div class="box">


<h2 style="margin: 30px;">新規登録</h2>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <table style="width:50%; margin-left:10px;" class="table table-condensed" cellspacing="0" cellpadding="5" >

        <tr>
          <td border-style: none; style="background: rgba(0,0,0,0.1);" align="left" nowrap style="border-style: none;">氏名</td>
            <td valign="top" width="150" style="border-style: none;">
              <%= f.text_field :first_name, {size:"10"} %>
                <%= f.text_field :last_name,  {size:"10"} %>
            </td>
        </tr>

        <tr>
          <td style="background: rgba(0,0,0,0.1);" align="left" nowrap style="border-style: none;">カナ</td>
            <td  valign="top" width="150" style="border-style: none;">
              <%= f.text_field :first_name_kana,  {size:"10"} %>
                <%= f.text_field :last_name_kana,  {size:"10"} %>
            </td>
        </tr>

        <tr>
          <td style="background: rgba(0,0,0,0.1);" align="left" nowrap style="border-style: none;">郵便番号</td>
            <td  valign="top" width="150" style="border-style: none;">
              <%= f.text_field :postal_code,  {size:"10"} %>
            </td>
        </tr>

        <tr>
          <td style="background: rgba(0,0,0,0.1);" align="left" nowrap style="border-style: none;">住所</td>
            <td  valign="top" width="150" style="border-style: none;">
              <%= f.text_field :address,  {size:"50"} %>
            </td>
        </tr>

        <tr>
          <td style="background: rgba(0,0,0,0.1);" align="left" nowrap style="border-style: none;">メールアドレス</td>
            <td  valign="top" width="150" style="border-style: none;">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
        </tr>

        <tr>
          <td style="background: rgba(0,0,0,0.1);" align="left" nowrap style="border-style: none;">電話番号</td>
            <td valign="top" width="150" style="border-style: none;">
              <%= f.text_field :phone_number %>
            </td>
        </tr>

        <tr>
          <td style="background: rgba(0,0,0,0.1);" align="left" nowrap style="border-style: none;">パスワード</td>
            <td  valign="top" width="150" style="border-style: none;">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
        </tr>

        <tr>
          <td style="background: rgba(0,0,0,0.1);" align="left" nowrap style="border-style: none;">パスワード（再）</td>
            <td  valign="top" width="150" style="border-style: none;">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
        </tr>
      </table>


      <div style="margin:30px;">
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>

<% end %>


<br>
</div>
