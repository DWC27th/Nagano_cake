<div class="container">

  <div class="row justify-content-start mt-3 mb-5">
    <h2>ジャンル追加・一覧画面</h2>
  </div>

  <%= render partial: 'form', locals: { genre: @genre } %>

  <table class="table mt-5">
    <thead>
      <tr>
        <th>ジャンルID</th>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
        	<td><%= genre.id %></td>
          <td><%= genre.name %></td>
          <td><%= genre.published_status %></td>
          <td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>