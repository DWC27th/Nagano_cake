<div class="container">

  <div class="row justify-content-start mt-3 mb-5">
    <h2 class="fa fa-star"> ジャンル追加・一覧画面</h2>
  </div>

  <%= render partial: "/layouts/error_messages", locals: { model: @genre } %>
  <%= render partial: 'form', locals: { genre: @genre } %>

  <table class="table table-hover table-inverse mt-3">
    <thead class="thead-light">
      <tr>
        <th>ジャンルID</th>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
        	<td><%= genre.id %></td>
          <td><%= genre.name %></td>
          <% if genre.published_status == "無効" %>
            <td><div class="btn btn-danger btn-sm active"><%= genre.published_status %></div></td>
          <% else %>
            <td><div class="btn btn-success btn-sm active"><%= genre.published_status %></div></td>
          <% end %>
          <td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row justify-content-center mt-3">
    <%= paginate @genres, class: "paginate" %>
  </div>

</div>