

<h3 style="margin:30px;">会員一覧画面</h3>


<table class="table table-hover" style="width: 60%; margin: 0 auto;">
  <thead>
　   <tr>
        <th bgcolor="#d3d3d3">会員id</th>
　　     <th bgcolor="#d3d3d3">氏名</th>
　　     <th bgcolor="#d3d3d3">メールアドレス</th>
　　     <th bgcolor="#d3d3d3">ステータス</th>
　   </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
          <td><%= link_to "#{member.first_name}" + "#{member.last_name}", admins_member_path(member.id), :style=>"color:black;text-decoration: underline;"  %>
          </td>
            <td><%= member.email %></td>
              <td><%= member.member_status %></td>
      </tr>
  <% end %>
  </tbody>
　
</table>

<div style="width: 20px; margin: 0 auto;">
<%= paginate @members, class: "pagination"  %>
<nav aria-label="...">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="前">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="">1</a></li>
    <li class="page-item"><a class="page-link" href="http://localhost:3000/admins/members">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="次">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
</div>